# API Keys - Choose your preferred LLM provider
# For OpenAI (GPT models)
OPENAI_API_KEY=your_openai_api_key_here

# For Anthropic (Claude models)  
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Other APIs
TAVILY_API_KEY=your_tavily_api_key_here

# LangSmith (optional, for tracing)
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=cos-agent

# LangGraph Studio Configuration
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_HUB_API_KEY=your_langchain_hub_api_key

# === Multi-MCP Server Configuration ===

# === Predefined MCP Servers ===
# EDFX MCP Server - Company risk profile analysis
# EDFX_MCP_URL=your_edfx_mcp_server_url
# EDFX_MCP_PORT=8080

# RPA MCP Server - Deal analysis and borrower relationship management
# RPA_MCP_URL=your_rpa_mcp_server_url
# RPA_MCP_PORT=8081

# Analysis MCP Server - Portfolio metrics and performance analysis  
# ANALYSIS_MCP_URL=your_analysis_mcp_server_url
# ANALYSIS_MCP_PORT=8082

# === Dynamic MCP Server Configuration ===
# Add any number of MCP servers using this pattern:
# MCP_SERVER_{NAME}_URL=server_url
# MCP_SERVER_{NAME}_PORT=server_port (optional, defaults to 8080)
# MCP_SERVER_{NAME}_DESC=server_description (optional)
#
# Examples:
# MCP_SERVER_WEATHER_URL=http://weather-mcp.example.com
# MCP_SERVER_WEATHER_PORT=9001
# MCP_SERVER_WEATHER_DESC=Weather forecasting and climate data tools
#
# MCP_SERVER_DATABASE_URL=https://db-mcp.mycompany.com
# MCP_SERVER_DATABASE_PORT=8090
# MCP_SERVER_DATABASE_DESC=Database query and management tools

# Databricks Configuration
DATABRICKS_WORKSPACE_URL=your_databricks_workspace_url
DATABRICKS_TOKEN=your_databricks_token
DATABRICKS_GENIE_SPACE_ID=your_default_genie_space_id

# Agent Configuration
# Choose your model - OpenAI models: gpt-4o, gpt-4, gpt-3.5-turbo
# Claude models: claude-3-5-sonnet-20241022, claude-3-opus-20240229, claude-3-sonnet-20240229, claude-3-haiku-20240307
DEFAULT_MODEL=gpt-4o
MAX_ITERATIONS=10
CHECKPOINT_DB=agent_checkpoints.sqlite

# Function Calling Configuration
ENABLE_FUNCTION_CALLING=true

# Directory Configuration
PROMPTS_DIR=prompts
KNOWLEDGE_BASE_DIR=knowledge_base